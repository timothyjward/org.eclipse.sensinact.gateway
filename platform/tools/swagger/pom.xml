<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.eclipse.sensinact.gateway.tools</groupId>
		<artifactId>platform.tools</artifactId>
		<version>2.0-SNAPSHOT</version>
	</parent>

	<artifactId>swagger</artifactId>
	<name>sensiNact IoT Gateway - Swagger API</name>

	<properties>
		<swagger.url>https://codeload.github.com/swagger-api/swagger-ui/zip/v2.1.4</swagger.url>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>com.googlecode.maven-download-plugin</groupId>
				<artifactId>download-maven-plugin</artifactId>
				<executions>
					<execution>
						<!-- the wget goal actually binds itself to this phase by default -->
						<phase>validate</phase>
						<goals>
							<goal>wget</goal>
						</goals>
						<configuration>
							<url>${swagger.url}</url>
							<outputFileName>swagger-ui.zip</outputFileName>
							<!-- default target location, just to demonstrate the parameter -->
							<outputDirectory>${project.build.directory}</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>prepare</id>
						<phase>validate</phase>
						<configuration>
							<target>
								<unzip src="${project.build.directory}/swagger-ui.zip"
									dest="${project.build.directory}/swagger-ui/" />
							</target>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-swagger</id>
						<phase>validate</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/swagger-api/dist</outputDirectory>
							<overwrite>true</overwrite>
							<resources>
								<resource>
									<directory>${project.build.directory}/swagger-ui/swagger-ui-2.1.4/dist</directory>
									<filtering>true</filtering>
								</resource>
								<resource>
									<targetPath>schemas</targetPath>
									<directory>src/client/schemas</directory>
									<filtering>true</filtering>
								</resource>
								<resource>
									<targetPath>images</targetPath>
									<directory>src/client/images</directory>
									<filtering>true</filtering>
								</resource>
								<resource>
									<directory>src/client</directory>
									<includes>
										<include>*.html</include>
										<include>*.yaml</include>
									</includes>
									<filtering>true</filtering>
								</resource>
								<resource>
									<directory>${project.build.directory}/swagger-api/dist/images</directory>
									<includes>
										<include>favicon.ico</include>
									</includes>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>biz.aQute.bnd</groupId>
				<artifactId>bnd-maven-plugin</artifactId>
			</plugin>
<!-- 			<plugin> -->
<!-- 				<groupId>org.apache.felix</groupId> -->
<!-- 				<artifactId>maven-bundle-plugin</artifactId> -->
<!-- 				<extensions>true</extensions> -->
